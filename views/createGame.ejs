<!doctype html>
<html lang="en">
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.css">
		<link rel="stylesheet" href="css/zombie.css">
	</head>
	<body>
		<div class="header twelve columns">
			<h1>SourceUndead</h1>
		</div>
		<div class="twelve columns full-page">
			<div class="nine columns stats">
				<div class="ten columns">
					<fieldset>
						<legend>Create a game</legend>
						<div id="error"></div>
						<div class="twelve columns">
							<form>
								<div class="row">
									<div class="twelve columns">
										<label for="lobby">Lobby Name</label>
										<input class="u-full-width" id="lobby" type="text" placeholder="Lobby Name">
									</div>
								</div>

								<div class="row">
									<div class="twelve columns">
										<label class="label-body" for="private">
											<span class="label-body">Private Lobby</span>
											<input id="private" value="false" type="checkbox">
										</label>
									</div>
								</div>

								<div class="row">
									<div class="twelve columns">
										<button id="createGame" class="u-full-width button">Submit</button>
									</div>
								</div>
							</form>
						</div>
					</fieldset>
				</div>
			</div>
			<div class="three columns menu full-page">
				<h5>Create a Game</h5>
				<div class="menu-item twelve columns">
					<i class="menu-option fa fa-line-chart fa-2x"></i><a href="/" class="menu-option-text">Statistics</a>
				</div>
				<div class="menu-item twelve columns">
					<i class="menu-option fa fa-hourglass-start fa-2x"></i><a href="/lobby" class="menu-option-text">Lobby</a>
				</div>
			</div>
		</div>
		<div class="footer twelve columns">
			<div>
				<a href="https://github.com/RUJodan/SourceUndead">Follow this game on GitHub!</a>
			</div>
			<div class="menu-item">
				<i class=" fa fa-power-off"></i><a href="/logout">Logout</a>
			</div>
		</div>	
		<script src="../js/functions.js"></script>
		<script src="../js/createGame.js"></script>
	</body>
</html>
